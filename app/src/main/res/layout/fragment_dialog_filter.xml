<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.ayach.org.homefinder.Util.DialogFilterFragment"
    android:background="@color/carbon_white">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:weightSum="100">

       <com.appyvet.rangebar.RangeBar
           xmlns:custom="http://schemas.android.com/apk/res-auto"
           android:id="@+id/rangebar"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="15"
           custom:tickStart="10"
           custom:tickInterval="50"
           custom:tickEnd="1000"
           android:layout_marginLeft="16dp"
           android:layout_marginRight="16dp"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="10"
           android:weightSum="100">
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:text="Min Price $"
               android:textColor="@color/wallet_holo_blue_light"
               android:gravity="center"
               android:textSize="13dp"
               android:layout_weight="25"/>
           <TextView
               android:id="@+id/pricemin"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:text="10$"
               android:textColor="@color/wallet_holo_blue_light"
               android:gravity="center"
               android:textSize="20dp"
               android:layout_weight="25"/>
           <TextView
               android:layout_width="0dp"
               android:id="@+id/pricemax"
               android:layout_height="match_parent"
               android:text="1000$"
               android:textColor="@color/wallet_holo_blue_light"
               android:gravity="center"
               android:textSize="20dp"
               android:layout_weight="25"/>
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:text="Max Price $"
               android:textColor="@color/wallet_holo_blue_light"
               android:gravity="center"
               android:textSize="12dp"
               android:layout_weight="25"
               android:textIsSelectable="false" />
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="20"
           android:weightSum="100">
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:text="Bed"
               android:textColor="@color/wallet_holo_blue_light"
               android:gravity="center"
               android:textSize="25dp"
               android:layout_weight="50"/>
           <EditText
               android:id="@+id/bedfilter"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="50"
               android:inputType="number"
               android:textColor="@color/wallet_holo_blue_light"
               android:text="1"
               android:textSize="25dp"
               android:gravity="center"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="20"
           android:weightSum="100">
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:text="Bedrooms"
               android:textColor="@color/wallet_holo_blue_light"
               android:gravity="center"
               android:textSize="25dp"
               android:layout_weight="50"/>
           <EditText
               android:id="@+id/roomfilter"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="50"
               android:inputType="number"
               android:textColor="@color/wallet_holo_blue_light"
               android:text="1"
               android:textSize="25dp"
               android:gravity="center"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="20"
           android:weightSum="100">
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:text="Bathrooms"
               android:textColor="@color/wallet_holo_blue_light"
               android:gravity="center"
               android:textSize="25dp"
               android:layout_weight="50"/>
           <EditText
               android:id="@+id/bathfilter"
               android:layout_width="0dp"
               android:inputType="number"
               android:layout_height="match_parent"
               android:layout_weight="50"
               android:textColor="@color/wallet_holo_blue_light"
               android:text="1"
               android:textSize="25dp"
               android:gravity="center"/>
       </LinearLayout>
       <Button
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="15"
           android:text="apply"
           android:textSize="28dp"
           android:id="@+id/applyfilter"
           android:background="@color/wallet_holo_blue_light"
           android:textColor="@color/carbon_white"
           />

   </LinearLayout>

</LinearLayout>
