<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragments.Fragment_Attr"
    style="@style/WizardPageContainer"
    android:orientation="vertical">

    <TextView style="@style/WizardPageTitle" />

    <ScrollView android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView style="@style/WizardFormLabel"
                android:text="Bed" />

            <EditText android:id="@+id/nblit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:saveEnabled="false"
                android:inputType="numberDecimal"
                android:hint="Bed"
                android:layout_marginBottom="16dp" />

            <TextView style="@style/WizardFormLabel"
                android:text="Bedroom" />

            <EditText  android:id="@+id/nbbedrrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:saveEnabled="false"
                android:inputType="numberDecimal"
                android:hint="Bedroom"  />
            <TextView style="@style/WizardFormLabel"
                android:text="Bathroom" />

            <EditText android:id="@+id/nbbethr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:saveEnabled="false"
                android:inputType="numberDecimal"
                android:hint="Bathroom" />

            <TextView style="@style/WizardFormLabel"
                android:text="Size" />

            <EditText android:id="@+id/demin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:saveEnabled="false"
                android:inputType="numberDecimal"
                android:hint="Size" />

            <TextView style="@style/WizardFormLabel"
                android:text="Description" />

            <EditText   android:id="@+id/descr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:saveEnabled="false"
                android:inputType="textCapWords"
                android:hint="Description" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>






